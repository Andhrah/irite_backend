use Mix.Config

# Configure your database
config :irite, Irite.Repo,
  username: "your_username",
  password: "your_password",
  database: "your_databasename_dev",    # make sure to include the "_dev"
  hostname: "localhost",
  show_sensitive_data_on_connection_error: true,
  pool_size: 10